body
    background-color #f8f7fa
    font-family 'Public Sans', sans-serif
    font-size 14px
    margin 0px
    padding 0px

.wrapper
    display flex
    height 100vh
    max-height 100vh
    width 100%
    .sidebar
        background-color #fff
        box-shadow 0 0.125rem 0.25rem rgba(165, 163, 174, .3)
        height 100%
        max-height 100%
        transition all 0.3s ease
        width 260px
        z-index 999
        .logo
            padding 16px 12px
            position relative
            img 
                display block
                width 60%
            a 
                color var(--c2)
                font-size 1.1em
                position absolute
                top 20px
                right 18px
        ul 
            box-sizing border-box
            display block
            list-style none
            margin 0px
            overflow hidden
            padding 0px 12px
            transition height 0.3s ease
            width 100%
            li 
                display block
                margin-bottom 2px
                width 100%
                a 
                    display block
                    border-radius 4px
                    box-sizing border-box
                    color var(--c3)
                    font-size 1.12em
                    font-weight 500
                    padding 10px 16px
                    transition-duration 0.2s
                    transition-property background-color color 
                    text-decoration none
                    width 100%
                    &:hover
                        background-color #f5f5f5
                    span.row-icon
                        font-size 0.8em
                        margin-top 4px
                        float right
                        transition all 0.2s ease
                a.active
                    background-color var(--c1)
                    color #fff
                    i
                        color #fff
                ul 
                    display none
                    background-color #f7f8f9
                    padding 0px
                    li 
                        a
                            i
                                color var(--c1)
                                font-size 0.7em
                                position relative
                                top -2px

    .content
        box-sizing border-box
        height 100vh
        max-height 100vh
        overflow-y scroll
        padding 24px
        width calc(100% - 260px)
        .topbar
            display flex
            background-color #fff
            border-radius 6px
            justify-content space-between
            padding 14px 16px
            width 100%
            z-index 999
            ul 
                display flex
                list-style none
                margin 0
                padding 0
                li
                    a
                        cursor pointer
                        display flex
                        width 100%
                        i
                            display block
                            color var(--c2)
                            font-size 1.4em !important
                            max-height 26px
                            width 26px
                        &:hover
                            color var(--c1)
                            i
                            span
                                color var(--c1)
                &:last-child
                    li
                        position relative
                        margin-left 12px
                        a
                            align-items center
                            display flex
                            color var(--c2)
                            font-size 1.1em
                            justify-content center
                            height 100%
                            text-decoration none
                            i
                                font-size 1.2em !important
                            img
                                display block
                                border-radius 50%
                                position relative
                                margin-top -3px
                                width 28px
                            span
                                margin-right 6px

.hide-in-desktop
    display none

.panel 
    background-color #fff
    border-radius 6px
    .panel-header
        border-bottom 1px solid #dbdade
        h5
            color var(--c2)
            font-size 1.13em
            margin-bottom 0px
            i
                color var(--c1)
    .inside
        padding 16px

a.file_uploader_trigger
    align-items center
    border 1px dashed #e0e3fb !important
    border-radius 12px
    color var(--c1)
    display-flex
    justify-content center
    height 50px
    text-decoration none
    transition all 0.4s ease
    width 100%
    .trigger_content
        display flex
        img
            display block
            width 24px !important
        span
            color #2a8df2
            font-size 1em
            margin-top 2px
            margin-left 10px
    &:hover
        background-color #f0f0f0


@media screen and (max-width: 992px)
    .wrapper
        .sidebar
            left -270px
            position absolute
            top 0
        .content
            box-sizing border-box
            padding 14px
            width 100%
    .hide-in-desktop
        display block
